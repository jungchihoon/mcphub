# MCPHub 기본 설정
PORT=3000
BASE_PATH=
NODE_ENV=development
REQUEST_TIMEOUT=60000

# 데이터베이스 설정
DATABASE_URL=postgres://username:password@localhost:5432/mcphub

# 인증 설정
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# OpenTelemetry 기본 설정
OTEL_ENABLED=true
OTEL_SERVICE_NAME=mcp-hub
OTEL_SERVICE_VERSION=1.0.0
OTEL_SERVICE_NAMESPACE=mcphub
OTEL_SERVICE_INSTANCE_ID=

# OpenTelemetry 내보내기 설정
OTEL_EXPORTER_OTLP_ENDPOINT=http://collector-http.rnr-apps-01.4.217.129.211.nip.io:4318
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_EXPORTER_OTLP_TIMEOUT=30000

# OpenTelemetry 추적 설정
OTEL_TRACES_ENABLED=true
OTEL_TRACES_EXPORTER=otlp
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# OpenTelemetry 메트릭 설정
OTEL_METRICS_ENABLED=true
OTEL_METRICS_EXPORTER=otlp
OTEL_METRIC_EXPORT_INTERVAL=60000
OTEL_METRIC_EXPORT_TIMEOUT=30000

# OpenTelemetry 로그 설정
OTEL_LOGS_ENABLED=true
OTEL_LOGS_EXPORTER=otlp
OTEL_LOGS_PROCESSOR=batch

# OpenTelemetry 배치 처리 설정
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=512
OTEL_BSP_MAX_QUEUE_SIZE=2048
OTEL_BSP_EXPORT_TIMEOUT=30000
OTEL_BSP_SCHEDULE_DELAY=5000

# OpenTelemetry 로그 배치 처리 설정
OTEL_BLSP_MAX_EXPORT_BATCH_SIZE=512
OTEL_BLSP_MAX_QUEUE_SIZE=2048
OTEL_BLSP_EXPORT_TIMEOUT=30000
OTEL_BLSP_SCHEDULE_DELAY=1000

# OpenTelemetry 계측 설정
OTEL_INSTRUMENTATION_HTTP_ENABLED=true
OTEL_INSTRUMENTATION_HTTP_CAPTURE_HEADERS=true
OTEL_INSTRUMENTATION_HTTP_IGNORE_INCOMING_PATHS=/health,/ping,/favicon.ico
OTEL_INSTRUMENTATION_EXPRESS_ENABLED=true
OTEL_INSTRUMENTATION_EXPRESS_IGNORE_LAYERS=
OTEL_INSTRUMENTATION_FS_ENABLED=false
OTEL_INSTRUMENTATION_DNS_ENABLED=false

# OpenTelemetry 개발 환경 설정
OTEL_CONSOLE_ENABLED=true
OTEL_LOG_LEVEL=info

# OpenTelemetry Frontend 설정
OTEL_TRACES_SAMPLE_RATE=1.0

# 운영 환경 설정 예시 (NODE_ENV=production일 때)
# OTEL_TRACES_SAMPLER_ARG=0.1
# OTEL_TRACES_SAMPLE_RATE=0.1
# OTEL_CONSOLE_ENABLED=false
# OTEL_LOG_LEVEL=warn
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-aks-collector-endpoint:4318
