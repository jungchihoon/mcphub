{
  "mcpServers": {
    "firecrawl-mcp": {
      "type": "sse",
      "url": "https://mcp.firecrawl.dev/${USER_FIRECRAWL_TOKEN}/sse",
      "name": "Firecrawl MCP Server",
      "description": "웹 스크래핑 및 데이터 추출을 위한 Firecrawl 서비스",
      "group": "data",
      "enabled": true,
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      }
    },
    "github-mcp": {
      "type": "streamable-http",
      "url": "https://api.github.com/mcp/${USER_GITHUB_TOKEN}",
      "name": "GitHub MCP Server",
      "description": "GitHub API를 통한 저장소 및 이슈 관리",
      "group": "development",
      "enabled": true,
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/vnd.github.v3+json",
        "Authorization": "Bearer ${USER_GITHUB_TOKEN}"
      }
    },
    "openai-mcp": {
      "type": "streamable-http",
      "url": "https://api.openai.com/mcp",
      "name": "OpenAI MCP Server",
      "description": "OpenAI API를 통한 AI 모델 접근",
      "group": "ai",
      "enabled": true,
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer ${USER_OPENAI_API_KEY}"
      }
    },
    "anthropic-mcp": {
      "type": "streamable-http",
      "url": "https://api.anthropic.com/mcp",
      "name": "Anthropic MCP Server",
      "description": "Anthropic Claude API를 통한 AI 모델 접근",
      "group": "ai",
      "enabled": true,
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer ${USER_ANTHROPIC_API_KEY}"
      }
    },
    "sequentialthinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "test": {
      "type": "streamable-http",
      "url": "http://localhost:8123/mcp",
      "name": "Test Streamable HTTP Server",
      "description": "로컬 테스트용 StreamableHTTP MCP 서버",
      "enabled": true,
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/jungchihoon/chihoon"
      ],
      "enabled": true
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "/Users/jungchihoon/hades/2025-07/mcphub"
      ],
      "enabled": false
    },
    "github-stdio": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e",
        "GITHUB_TOOLSETS",
        "-e",
        "GITHUB_READ_ONLY",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${USER_GITHUB_TOKEN}",
        "GITHUB_TOOLSETS": "",
        "GITHUB_READ_ONLY": ""
      },
      "enabled": false
    }
  },
  "systemConfig": {
    "routing": {
      "enableGlobalRoute": true,
      "enableGroupNameRoute": true,
      "enableBearerAuth": false,
      "bearerAuthKey": ""
    },
    "smartRouting": {
      "enabled": true,
      "openaiApiKey": "your_openai_api_key_here",
      "openaiApiBaseUrl": "https://api.openai.com/v1",
      "openaiApiEmbeddingModel": "text-embedding-3-small",
      "dbUrl": "postgresql://localhost:5432/mcphub"
    }
  },
  "users": [
