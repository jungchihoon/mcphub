{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "mcp-atlassian-jira": {
      "type": "streamable-http",
      "url": "https://mcp-jira-service.livelybeach-90f399a8.koreacentral.azurecontainerapps.io/mcp/",
      "headers": {
        "Authorization": "Bearer ${ATLASSIAN_JIRA_TOKEN}",
        "X-User-Email": "${ATLASSIAN_JIRA_EMAIL}",
        "X-Jira-URL": "${ATLASSIAN_JIRA_URL}"
      }
    },
    "mcp-atlassian-confluence": {
      "type": "streamable-http",
      "url": "https://mcp-confluence-service.livelybeach-90f399a8.koreacentral.azurecontainerapps.io/mcp/",
      "headers": {
        "Authorization": "Bearer ${ATLASSIAN_CONFLUENCE_TOKEN}",
        "X-User-Email": "${ATLASSIAN_CONFLUENCE_EMAIL}",
        "X-Jira-URL": "${ATLASSIAN_CONFLUENCE_URL}"
      }
    },
    "github-pr-mcp-server": {
      "type": "streamable-http",
      "url": "https://github-pr-mcp-server.livelybeach-90f399a8.koreacentral.azurecontainerapps.io/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    }
  }
}